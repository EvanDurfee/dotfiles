################################################################################
# FZF integration
################################################################################
source <(fzf --zsh)
# Customizes history search fzf flags
# --preview... shows a preview window with the output of the given command ({2..} skips the first field of the input, the histroy number)
# --preview-window moves the window to the top, wraps text, and sizes to max 3 lines
# --bind keys to various actions
export FZF_CTRL_R_OPTS="\
  --preview 'echo -n {2..} | bat --color=always --language=zsh --plain --strip-ansi=always'
  --preview-window up:wrap:3
  --bind 'ctrl-/:toggle-preview'
  --bind 'ctrl-k:print-query+abort'
  --bind 'ctrl-y:execute-silent(echo -n {2..} | clip)+abort'
  --bind 'enter:accept-or-print-query'
  --bind 'esc:abort'
  --color header:italic
  --header 'Press CTRL-Y to copy command into clipboard, CTRL-K to keep prompt'"


