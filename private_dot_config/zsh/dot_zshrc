################################################################################
# Plugins
################################################################################
ezplug () {
	# Simple plugin manager functionality
	local plugin_dir
	# TODO: Create casks in own tap to support this
	if [ -e "$HOMEBREW_PREFIX/share/${1:t}/${1:t}.plugin.zsh" ] \
			|| [ -e "$HOMEBREW_PREFIX/share/${1:t}/${1:t}.zsh-theme" ]; then
		# Check if the plugin is installed from homebrew
		plugin_dir="$HOMEBREW_PREFIX/share/${1:t}"
	else
		local plugin_name_hash state_dir update_file
		# Git clone the plugin
		plugin_name_hash="$(echo "$1" | sha256sum | cut -d ' ' -f1)"
		state_dir="${XDG_STATE_HOME:-$HOME/.local/state}"/zsh/plugins/updates
		update_file="$state_dir"/"$plugin_name_hash"
		plugin_dir="${XDG_DATA_HOME:-$HOME/.local/share}"/zsh/plugins/"$1"

		mkdir -p "$state_dir"

		# clone plugin if not present
		if [ ! -e "$plugin_dir" ]; then
			mkdir -p "$plugin_dir"
			git clone --depth=1 "https://github.com/$1.git" "$plugin_dir" && touch "$state_dir"/"$plugin_name_hash"
		fi
		# Update plugin if not updated recently
		if ! [ -e "$state_dir"/"$plugin_name_hash" ] || (( "$(date -r "$update_file" +%s)" < ("$(date +%s)" - 60 * 60 * 24 * 7) )); then
			git -C "$plugin_dir" pull >/dev/null && touch "$state_dir"/"$plugin_name_hash"
		fi
	fi
	if [ -e "$plugin_dir"/"${1:t}.plugin.zsh" ]; then
		source "$plugin_dir"/"${1:t}.plugin.zsh"
	fi
	if [ -e "$plugin_dir"/"${1:t}.zsh-theme" ]; then
		source "$plugin_dir"/"${1:t}.zsh-theme"
	fi
}

